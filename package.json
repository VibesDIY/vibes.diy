{
  "name": "vibes.diy-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "it contains all elements of vibes.diy web page",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VibesDIY/vibes.diy.git"
  },
  "homepage": "https://vibes.diy",
  "bugs": {
    "url": "https://github.com/VibesDIY/vibes.diy/issues"
  },
  "scripts": {
    "xbuild:base": "pnpm --filter use-vibes-base build",
    "build": "core-cli tsc",
    "build:prod": "pnpm --filter vibes-diy build",
    "serve:prod": "pnpm exec serve -s vibes.diy/pkg/build/client",
    "lint": "eslint . && cd hosting/pkg && pnpm lint",
    "knip": "knip",
    "test": "cross-env DISABLE_REACT_ROUTER=true vitest --run",
    "test:coverage": "cross-env DISABLE_REACT_ROUTER=true vitest run --coverage",
    "test:all": "cd vibes.diy/tests/app && pnpm run test && cd ../simple-chat && pnpm run test && cd ../../../prompts/tests && pnpm run test && cd ../../use-vibes/tests && pnpm run test && cd ../../call-ai/tests && pnpm run test",
    "playwright:claude": "playwright test -c claude-browse-vibes/playwright.config.js",
    "test:screenshot:local": "node claude-browse-vibes/test-screenshot-api.js",
    "format": "prettier --write  --log-level silent .",
    "wrangler:types": "cd hosting/pkg && npx wrangler types && cd ../.. && pnpm format",
    "hosting:check": "echo 'üîç Running hosting CI checks...' && pnpm --filter @vibes.diy/hosting-base build && echo '‚úÖ Hosting base built' && cd hosting/pkg && pnpm check && echo '‚úÖ Hosting format and lint passed' && cd ../.. && pnpm --filter @vibes.diy/hosting-tests test && echo 'üéâ All hosting CI checks passed!'",
    "dev": "cd vibes.diy/pkg && pnpm run dev",
    "dev:router": "cd vibes.diy/pkg && pnpm run dev:router",
    "pack": "echo skip pack",
    "publish": "echo skip publish",
    "check": "pnpm format && pnpm build && pnpm lint && pnpm test && pnpm --filter @vibes.diy/hosting-tests test",
    "storybook": "cd vibes.diy/pkg && cross-env DISABLE_REACT_ROUTER=true pnpm run storybook",
    "storybook:use-vibes": "cd use-vibes/base && pnpm run storybook",
    "update-fireproof": "cd scripts && pnpm update-deps -C .."
  },
  "keywords": [
    "ai",
    "llm",
    "api",
    "call",
    "openai",
    "streaming",
    "openrouter"
  ],
  "contributors": [
    "J Chris Anderson",
    "Selem Delul",
    "Meno Abels"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@fireproof/core-cli": "0.24.3-dev-ensure-cloud-token-9",
    "@playwright/test": "^1.57.0",
    "@types/deno": "^2.5.0",
    "@types/node": "^24.9.1",
    "@typescript/native-preview": "7.0.0-dev.20251212.1",
    "cmd-ts": "^0.14.3",
    "cross-env": "^10.0.0",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.32.0",
    "knip": "^5.71.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "puppeteer": "^24.31.0",
    "typescript-eslint": "^8.48.0",
    "wrangler": "^4.54.0",
    "zx": "^8.8.5"
  },
  "dependencies": {
    "@fireproof/core": "0.24.3-dev-ensure-cloud-token-9",
    "@fireproof/core-keybag": "0.24.3-dev-ensure-cloud-token-9",
    "@fireproof/core-runtime": "0.24.3-dev-ensure-cloud-token-9",
    "@fireproof/core-types-base": "0.24.3-dev-ensure-cloud-token-9",
    "@fireproof/core-types-protocols-cloud": "0.24.3-dev-ensure-cloud-token-9",
    "@fireproof/use-fireproof": "0.24.3-dev-ensure-cloud-token-9"
  }
}
