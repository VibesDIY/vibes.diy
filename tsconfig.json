{
  "compilerOptions": {
    "target": "es2022",

    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],

    "paths": {
      "//+types/root": [
        "./vibes.diy/pkg/.react-router/types/app/+types/root.js"
      ],
      "~/vibes-diy/*": ["./vibes.diy/pkg/*"]
    },

    "resolveJsonModule": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "types": ["node", "deno"]
  },
  "include": ["call-ai/**/*", "use-vibes/**/*", "vibes.diy/**/*"],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/examples/**",
    "**/.react-router/**",
    "**/.netlify/**",
    "**/tests-new/**"
  ]
}
