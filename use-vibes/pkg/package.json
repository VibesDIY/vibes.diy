{
  "name": "use-vibes",
  "version": "0.0.0",
  "type": "module",
  "description": "Transform any DOM element into an AI-powered micro-app",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    },
    "./style-loader": {
      "types": "./style-loader.d.ts",
      "import": "./style-loader.js"
    }
  },
  "scripts": {
    "build": "core-cli tsc",
    "copy-css": "mkdir -p dist/components && cp src/components/ImgGen.css dist/components/",
    "build:watch": "tsc --watch",
    "dev:build": "tsc --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix --rule 'no-unused-vars: 1' --rule 'no-empty: 1' --rule '@typescript-eslint/no-unused-vars: 1'",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "check": "pnpm lint && pnpm format && pnpm typecheck && pnpm test",
    "pack": "core-cli build -x '^' --doPack",
    "publish": "core-cli build -x '^'"
  },
  "keywords": [
    "ai",
    "dom",
    "micro-app",
    "generator",
    "web",
    "esm",
    "typescript"
  ],
  "contributors": [
    "J Chris Anderson",
    "Meno Abels"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "use-vibes-base": "workspace:0.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@fireproof/core-cli": "^0.23.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "playwright-chromium": "^1.54.1",
    "prettier": "^3.6.2",
    "react-dom": "^19.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.4"
  }
}
